<%include _header%>

<div class="row container">
    <div class="col-md-12">
        <form action="/zombies/delete/<%=zombie.id%>?_method=DELETE" method="POST">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" value="<%= zombie.name%>" disabled="true">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" name="email" value="<%= zombie.email%>" disabled="true">
            </div>
            <div class="form-group">
                <label for="type">Tipo</label>
                <input type="text" class="form-control" name="type" value="<%= zombie.type%>" disabled="true">
            </div>
                <button class="btn btn-danger"><i class="fas fa-biohazard"></i>Eliminar zombie</button>
        </form>
    </div>
</div>

<%include _footer%>
