<% include ../views/_header%>  
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <p>Alan Flores_ INDEX</p>
    <h1>Lista de zombies</h1>

    <div id="messageNew">
         
    </div>

    <table class="table table-striped table-danger">
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Tipo</th>
        <th>Acciones</th>
      </tr>
      <%
      if(coleccion){
        coleccion.forEach(function(zombie){
      %>
      <tr>
        <td> <%= zombie.name %> </td>
        <td> <%= zombie.email %> </td>
        <td> <%= zombie.type %> </td>
        <td>
          <a href="/zombies/edit/<%=zombie.id%>"><i class="fas fa-edit" title="Editar"></i></a>
          
          <a href="/zombies/delete/<%=zombie.id%>"><i class="fas fa-trash-alt" title="Eliminar"></i></a>
        </td>
      </tr>
      <% 
    });}
      %>
    </table>
    <a href="/zombies/add"><button class="btn btn-primary">Agregar nuevo zombie</button></a>
  <%include _footer%>
